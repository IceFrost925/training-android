<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


   <!--表头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#f0f0f5"
        >
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尊敬的用户"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=",您好！"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:text="[登录]"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="[注册]"/>
        <ImageView
            android:id="@+id/yonghu"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user">

        </ImageView>


        <ImageView
            android:id="@+id/shouchang"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sc"
            android:layout_marginLeft="20dp">

        </ImageView>
        <ImageView
            android:id="@+id/gouwuce"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gwc"
            android:layout_marginLeft="20dp">

        </ImageView>
        <ImageView
            android:id="@+id/fenxiang"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fx"
            android:layout_marginLeft="20dp">

        </ImageView>

    </LinearLayout>
    <!--表头-->

    <!--中间图标-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/beijing"/>

    <!--中间图标-->


    <!--菜单-->
    <Spinner
        android:id="@+id/spinner_caidan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@null"
        >

    </Spinner>
    <!--菜单-->
        <!--轮播图-->
        <android.support.v4.view.ViewPager
            android:id="@+id/view_page"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >

        </android.support.v4.view.ViewPager>
        <!--轮播图-->

        <!---->
   <FrameLayout
       android:id="@+id/frame_content"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   </FrameLayout>

    <!--foot-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#262626"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="信息咨询"

            />
        <TextView
            android:id="@+id/kefu"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="客户服务"
            />
        <TextView
            android:id="@+id/other"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="其他"
            />
        <TextView
            android:id="@+id/center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="会员中心"
            />
        <TextView
            android:id="@+id/tell"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="联系我们"
            />
    </LinearLayout>
    </LinearLayout>
    <!--foot-->
</ScrollView>