<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.RegisterFragment"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/bg_input"
    android:padding="20dp">


    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textColor="#00B266"
        android:textSize="30sp"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/tv_remind"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎来到我们网站，如果您是新用户，请填写下面的表单进行注册。如果您已经是本站的会员请您直接登陆。"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tv_re0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电子邮箱"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15dp"/>
     
     <EditText
    android:id="@+id/ed_re0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="请输入电子邮箱"
    android:singleLine="true"
    android:textSize="15dp"
    android:inputType="textPersonName"
    />
          

     
    <TextView
        android:id="@+id/tv_re1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的姓名"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15dp"/>
     
     <EditText
    android:id="@+id/ed_re1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="请输入您的姓名"
    android:singleLine="true"
    android:inputType="textPersonName"
    android:textSize="15dp"
    />

        <TextView
    android:id="@+id/tv_re2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="输入密码"
    android:layout_marginLeft="5dp"
    android:textSize="15dp"
    android:textColor="#000"/>
          
     
        <EditText
    android:id="@+id/ed_re2"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:hint="输入密码"
    android:singleLine="true"
    android:inputType="textPassword"
    android:textSize="15dp"/>
          
     <TextView
    android:id="@+id/tv_re3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="确认密码"
    android:layout_marginLeft="5dp"
    android:textSize="15dp"
    android:textColor="#000"/>
          
     
        <EditText
    android:id="@+id/ed_re3"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:hint="确认密码"
    android:singleLine="true"
    android:inputType="textPassword"
    android:textSize="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/confirm"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="确认"
            android:background="#00B266"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
          


</LinearLayout>